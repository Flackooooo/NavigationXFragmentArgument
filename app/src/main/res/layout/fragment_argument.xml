            android:layout_width="0dp"
            android:layout_height="0dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editTextNetwork"
            app:layout_constraintTop_toBottomOf="@+id/editTextJava" app:layout_constraintStart_toEndOf="@+id/textView4"
